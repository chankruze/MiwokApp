<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="@color/tan_background">

    <TextView
        android:id="@+id/numbers"
        style="@style/CategoryStyle"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/bg_rounded_corner_numbers"
        android:text="@string/category_numbers"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/family"
        style="@style/CategoryStyle"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@drawable/bg_rounded_corner_family"
        android:text="@string/category_family"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/colors"
        style="@style/CategoryStyle"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@drawable/bg_rounded_corner_colors"
        android:text="@string/category_colors"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <TextView
        android:id="@+id/phrases"
        style="@style/CategoryStyle"
        android:layout_row="3"
        android:layout_column="0"
        android:background="@drawable/bg_rounded_corner_phrases"
        android:text="@string/category_phrases"
        android:textAlignment="center"
        android:textAllCaps="true" />

</GridLayout>